<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>To Do List</title>
    <link rel="stylesheet" href="/css/index.css">
  </head>
  <body>
    <div class="todoEnter">
      <h1>To Do App</h1>
      <form action="/" method="post" class="todoList static">
        <input type="text" name="todo" placeholder="Add a todo">
        <button type="submit" name="button">Add todo</button>
      </form>

      {{#todos}}
        <form action="/" method="post" class="todoList">
          <button type="submit" class="mark_complete" name="complete" value="{{.}}">âœ”</button>
          <span class="todoItem">{{.}}</span><br>
        </form>
      {{/todos}}
    </div>

    <div class="completed_Tasks">
      <h2>Completed Tasks</h2>
      {{#todoFin}}
        <p class="complete">{{.}}</p>
      {{/todoFin}}
    </div>

    <script type="text/javascript" src="/js/index.js"></script>
  </body>
</html>
